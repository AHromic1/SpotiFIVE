	<img class="download" src="~/assets/images/Download.png" />
	<p class="textDownload">Download</p>
	<img class="previous" src="~/assets/images/Previous.png" />
	<img class="play" src="~/assets/images/Play.png" />
	<img class="next" src="~/assets/images/Next.png" />
	<img class="add" src="~/assets/images/Add.png" />
	<p class="textAdd">Add</p>
	<!--Timestamp dodati dinamicki!!!-->
	<progress class="progress" id="progressBar" value="50" max="100"></progress>
