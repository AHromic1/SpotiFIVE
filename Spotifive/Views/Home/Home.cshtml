@model IEnumerable< Spotifive.Models.Song>
@{
    ViewData["Title"] = "Home";
}

<head>
    <link rel="stylesheet" href="~/css/motoDark.css">
    <link rel="stylesheet" href="~/css/bodyLight.css">
    <link rel="stylesheet" href="~/css/sgnLogBttnDark.css">
    <link rel="stylesheet" href="~/css/logo.css">
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- The above 4 meta tags *must* come first in the head; any other head content must come *after* these tags -->
   
    <!-- Stylesheet -->
    <link rel="stylesheet" href="style.css">
    <!--Search bar-->

    <style>
        header {
            position: fixed;
            height:32vh;
            width:200vh;
            top: 0;
            z-index: 1;
            background-color: #a8b6f0;
        }
        .logo {
            position: fixed;
            bottom: 40px;
            right: 60px;
        }
    .secsongs{
        position:relative;
        margin-top: 34vh;
             
    }

       
        .search-container {
            position: fixed;
            top: 2%;
            left: 20%;
        }

        .search-box {
            margin: 20px 5px;
            padding: 10px;
            border-radius: 30px;
            border: 1px solid gray;
            width: 300px;
            font-size: 16px;
        }

        .search-button {
            position: fixed;
            top: 4.5%;
            left: 42%;
            font-family: 'Montserrat', sans-serif; /*sans-serif is in case there is no montserrat on the user's system*/
            font-size: 22px;
            border-radius: 30px;
            background-color: #0b2847;
            text-align: center;
            color: #a8b6f0;
            padding-right: 15px;
            padding-left: 15px;
            padding-top: 5px;
            padding-bottom: 5px;
        }

        h3 {
            position: fixed;
            top: 100px;
            left: 150px;
        }
  

        .imgProfile {
            position: fixed;
            right: 14vh;
            top: 5vh;
            font-style: italic;
            height: 50px;
            width: 50px;
        }

        .imagesong{
            border: 1px solid #ddd;
            border-radius: 4px;
            padding: 5px;
            width: 150px;
            height: 150px;
        }

        img:hover {
            box-shadow: 0 0 2px 1px rgba(0, 140, 186, 0.5);
        }

    +
        h1 {
            position: fixed;
            top: 50vh;
            left: 100vh;
            font-size: 40px;
            font-weight: bold;
        }
    
        .buttons {
            border: 1px solid transparent;
            color: #0b2847;
            text-align: left;
            font-size: 28px;
            font-family: 'Montserrat', sans-serif; /*sans-serif is in case there is no montserrat on the user's system*/
            background-color: #a8b6f0;
        }

        .positionh2 {
            position: fixed;
            top: 60px;
            left: 100px;
        }
        .imgpos{
            height: 150px;
            width:150px;
        }
        .tabpos{
            position: fixed;
            top: 40%;
            left: 20%;
        }

        .posInfo {
            position: absolute;
            top: 50%;
            left: 300px;
            width: 200px;
        }


    </style>

</head>

<header>

    <form>
        <div class="search-container">
            <input type="text" class="search-box" id="Text1" placeholder="Type here..." />
            <button type="button" class="search-button" data-target="#srcsong" data-toggle="modal" id="showPop">Search</button>
        </div>
        <a asp-action="Account" asp-controller="Account"><img class="imgProfile" id="userAvatar" src="~/assets/images/Profile.png"></a>
        </>
        <!-- Modal -->
        <div class="modal fade" id="srcsong" role="dialog">
            <div class="modal-dialog   modal-lg">

                <!-- Modal content-->
                <div class="modal-content" style="background-color:#0b2847;">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body ">
                        <div id="popup">
                        </div>
                    </div>

                </div>

            </div>
        </div>

    </form>

    @section Scripts{
        <script>
            $('#showPop').click(function () {
                var url = '@Url.Action("GetPartialView", "Home")';
                $.ajax({
                    url: url,
                    type: 'post',
                    data: { "para": $("#Text1").val() },
                    success: function (data) {
                        $('#popup').html(data);
                    }
                });
            })


        </script>
    }

    <!--User avatar-->

    
  

    <div class="positionh2">

        <button class="buttons"><a asp-action="Home" asp-controller="Home" style="color:#0b2847;">Home</a></button>

        <br>

       
        <button class="buttons"><a asp-action="Artist" asp-controller="Artist" style="color:#0b2847;">Artists</a></button>

        <br>

        @if (User.IsInRole("RegisteredUser"))
        {
            <button class="buttons"><a asp-action="Playlist" asp-controller="Playlist" style="color:#0b2847;">Playlists</a></button>
           
        }
        <br>
        <h1 style="color:#0b2847;">Top songs</h1>

    </div>
  
</header>

<body>


    <section class="secsongs">
        <div class="row text-center" style="margin-bottom:100px;">
        @foreach (var item in Model)
        {
            <div class="col-sm-4 ">
                <div>
                    <a asp-area="" asp-controller="Song" asp-action="Song" asp-route-id="@item.ID" style="-webkit-text-fill-color:#0b2847;">
                        <img src="@item.Image" alt="@item.SongName" width="200" height="200">
                    </a>
                    <p class="text-center" style="color:#0b2847;">@item.SongName</p>
                </div>
            </div>
        }
        </div>
    </section>
        

    <div>
        <a href="your-link-here">
            <img width="130" height="100" class="logo" src="~/assets/images/SpotiFIVELogo.png">
        </a>
  

    </div>
</body>