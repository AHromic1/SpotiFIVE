@model Spotifive.Models.Person


@{
    ViewData["Title"] = "Home";
}

<head>
    <link rel="stylesheet" href="~/css/motoDark.css">
    <link rel="stylesheet" href="~/css/bodyLight.css">
    <link rel="stylesheet" href="~/css/sgnLogBttnDark.css">
    <link rel="stylesheet" href="~/css/logo.css">

    <!--Search bar-->

    <style>
    
        .logo {
            position: fixed;
            bottom: 40px;
            right: 60px;
        }
   
        .search-container {
            position: fixed;
            top: 30px;
            left: 340px;
        }

        .search-box {
            margin: 20px 5px;
            padding: 10px;
            border-radius: 30px;
            border: 1px solid gray;
            width: 300px;
            font-size: 16px;
        }

        .search-button {
            position: fixed;
            top: 50px;
            font-family: 'Montserrat', sans-serif; /*sans-serif is in case there is no montserrat on the user's system*/
